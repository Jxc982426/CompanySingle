<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>
    <!--    配置log4j-->
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>

    <!--配置数据源， 因与spring整合所以交由spring来完成 -->

    <typeAliases>
        <package name="com.jxc.pojo"/>
    </typeAliases>


    <mappers>
        <package name="com.jxc.dao"/>
    </mappers>

</configuration>